<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/text_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/fontLarge"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/image_contact"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_contact_green_24dp"
            app:layout_constraintLeft_toRightOf="@+id/text_client"
            app:layout_constraintTop_toTopOf="@+id/text_client"
            app:layout_constraintBottom_toBottomOf="@+id/text_client"/>

        <TextView
            android:id="@+id/text_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:textSize="@dimen/fontLarge"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/image_contact"
            app:layout_constraintTop_toTopOf="@+id/text_client"/>

        <TextView
            android:id="@+id/text_past_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="@dimen/fontSmall"
            android:textColor="@color/grey"
            app:layout_constraintLeft_toRightOf="@id/text_admin"
            app:layout_constraintBottom_toBottomOf="@id/text_admin"/>

        <TextView
            android:id="@+id/text_application_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/application_time"
            android:textSize="@dimen/fontSmall"
            android:textColor="@color/grey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_client"/>

        <TextView
            android:id="@+id/text_application_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontNormal"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_application_time_title"/>

        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/whiteGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_application_time"/>

        <TextView
            android:id="@+id/text_estimate_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/estimate_time"
            android:textSize="@dimen/fontSmall"
            android:textColor="@color/grey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line1"/>

        <TextView
            android:id="@+id/text_estimate_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontNormal"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_estimate_time_title"/>

        <View
            android:id="@+id/line2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/whiteGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_estimate_time"/>

        <TextView
            android:id="@+id/text_contact_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/contact_time"
            android:textSize="@dimen/fontSmall"
            android:textColor="@color/grey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line2"/>

        <TextView
            android:id="@+id/text_contact_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontNormal"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_contact_time_title"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/frame_cloud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0.5dp"
        android:background="@color/whiteGrey"
        android:alpha="0.3"/>
</android.support.v7.widget.CardView>