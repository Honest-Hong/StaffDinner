<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="PrimaryTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/fontSmall</item>
    </style>

    <style name="PrimaryEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="android:background">@drawable/background_edit_text_white</item>
    </style>

    <style name="PrimaryHelpTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/fontSmall</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">@color/colorShowcaseBackground</item>
        <item name="sv_showcaseColor">@color/colorShowcase</item>
        <item name="sv_buttonText">다음</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomText</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textSize">@dimen/fontGraphic</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomText" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textSize">@dimen/fontLarge</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/whiteGrey</item>
    </style>

    <style name="MaterialEditText" parent="AppTheme">
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="met_textColor">@color/white</item>
        <item name="met_textColorHint">@color/whiteHalf</item>
        <item name="met_floatingLabel">normal</item>
        <item name="met_baseColor">@color/white</item>
        <item name="met_primaryColor">@color/white</item>
        <item name="met_helperTextAlwaysShown">true</item>
        <item name="met_helperTextColor">@color/white</item>
        <item name="met_bottomTextSize">@dimen/fontSmall</item>
        <item name="met_floatingLabelTextSize">@dimen/fontSmall</item>
    </style>

    <style name="ApplicationTextView">
        <item name="android:textSize">@dimen/fontSmall</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
