<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/join_activity_title"
            android:textColor="@color/white"
            android:textSize="@dimen/fontLargest"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/yellow"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:background="@drawable/shape_rounded_rectangle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:text="@string/text_restraurant_name"
            android:textColor="@color/white"
            android:textSize="@dimen/fontLarge"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/edit_name"
            app:layout_constraintTop_toBottomOf="@+id/text_title"
            app:layout_constraintBaseline_toBaselineOf="@+id/edit_name" />

        <TextView
            android:id="@+id/text_name_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/text_join_restraurant_name_help"
            android:textColor="@color/white"
            android:textSize="@dimen/fontSmall"
            app:layout_constraintTop_toBottomOf="@id/edit_name"
            app:layout_constraintLeft_toLeftOf="@id/edit_name"
            app:layout_constraintRight_toRightOf="@id/edit_name"/>

        <ImageView
            android:id="@+id/image_title"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/text_name_help"
            app:layout_constraintLeft_toLeftOf="@id/edit_name"
            app:layout_constraintRight_toRightOf="@id/edit_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/text_image_title"
            android:textColor="@color/white"
            android:textSize="@dimen/fontLarge"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/image_title"
            app:layout_constraintTop_toTopOf="@id/image_title"/>

        <TextView
            android:id="@+id/text_image_title_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/text_image_title_help"
            android:textColor="@color/white"
            android:textSize="@dimen/fontSmall"
            app:layout_constraintTop_toBottomOf="@id/image_title"
            app:layout_constraintLeft_toLeftOf="@id/image_title"
            app:layout_constraintRight_toRightOf="@id/image_title"/>

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:inputType="phone"
            android:maxLines="1"
            android:background="@drawable/shape_rounded_rectangle"
            app:layout_constraintLeft_toLeftOf="@+id/edit_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_image_title_help" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/text_phone"
            android:textColor="@color/white"
            android:textSize="@dimen/fontLarge"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/edit_name"
            app:layout_constraintBaseline_toBaselineOf="@+id/edit_phone" />

        <TextView
            android:id="@+id/text_phone_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/text_join_phone_help"
            android:textColor="@color/white"
            android:textSize="@dimen/fontSmall"
            app:layout_constraintTop_toBottomOf="@id/edit_phone"
            app:layout_constraintLeft_toLeftOf="@id/edit_name"
            app:layout_constraintRight_toRightOf="@id/edit_name"/>

        <EditText
            android:id="@+id/edit_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:inputType="text"
            android:maxLines="1"
            android:background="@drawable/shape_rounded_rectangle"
            app:layout_constraintLeft_toLeftOf="@+id/edit_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_phone_help" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/text_style"
            android:textColor="@color/white"
            android:textSize="@dimen/fontLarge"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/edit_name"
            app:layout_constraintBaseline_toBaselineOf="@+id/edit_style" />

        <TextView
            android:id="@+id/text_style_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/text_style_help"
            android:textColor="@color/white"
            android:textSize="@dimen/fontSmall"
            app:layout_constraintTop_toBottomOf="@id/edit_style"
            app:layout_constraintLeft_toLeftOf="@id/edit_name"
            app:layout_constraintRight_toRightOf="@id/edit_name"/>

        <EditText
            android:id="@+id/edit_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:inputType="text"
            android:maxLines="1"
            android:background="@drawable/shape_rounded_rectangle"
            app:layout_constraintLeft_toLeftOf="@+id/edit_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_style_help" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/text_menu"
            android:textColor="@color/white"
            android:textSize="@dimen/fontLarge"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/edit_name"
            app:layout_constraintBaseline_toBaselineOf="@+id/edit_menu" />

        <EditText
            android:id="@+id/edit_menu_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:background="@drawable/shape_rounded_rectangle"
            app:layout_constraintLeft_toLeftOf="@+id/edit_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/text_cost"
            android:textColor="@color/white"
            android:textSize="@dimen/fontLarge"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/edit_name"
            app:layout_constraintBaseline_toBaselineOf="@+id/edit_menu_cost" />

        <TextView
            android:id="@+id/text_menu_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/text_menu_help"
            android:textColor="@color/white"
            android:textSize="@dimen/fontSmall"
            app:layout_constraintTop_toBottomOf="@id/edit_menu_cost"
            app:layout_constraintLeft_toLeftOf="@id/edit_name"
            app:layout_constraintRight_toRightOf="@id/edit_name"/>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/text_menu_help"
            app:layout_constraintRight_toRightOf="@id/edit_name"
            app:layout_constraintLeft_toLeftOf="@id/edit_name">

            <TextView
                android:id="@+id/text_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSmall"
                android:background="@drawable/shape_rounded_rectangle" />

            <ImageButton
                android:id="@+id/button_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_search_orange_24dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="@string/text_location"
            android:textSize="@dimen/fontNormal"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/linear"
            app:layout_constraintTop_toTopOf="@id/linear"
            app:layout_constraintBottom_toBottomOf="@id/linear"/>

        <TextView
            android:id="@+id/text_location_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/text_location_help"
            android:textColor="@color/white"
            android:textSize="@dimen/fontSmall"
            app:layout_constraintTop_toBottomOf="@id/linear"
            app:layout_constraintLeft_toLeftOf="@id/edit_name"
            app:layout_constraintRight_toRightOf="@id/edit_name"/>

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_location_help" />

        <View
            android:id="@+id/line2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/yellow"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@id/map"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/text_agree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text="@string/text_join_agree"
            android:textColor="@color/white"
            android:textSize="@dimen/fontNormal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/line2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

        <CheckBox
            android:id="@+id/check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:text="@string/text_i_agree"
            android:textColor="@color/white"
            android:textSize="@dimen/fontNormal"
            app:layout_constraintTop_toBottomOf="@+id/text_agree"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="24dp" />

        <View
            android:id="@+id/line3"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/yellow"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@id/check_box"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/button_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/text_join"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@+id/line3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>