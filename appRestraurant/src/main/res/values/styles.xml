<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="DetailTextContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">@dimen/fontSmall</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DetailTextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">@dimen/fontSmall</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabLayoutTextAppearance">
        <item name="android:textSize">@dimen/fontLarge</item>
    </style>


    <style name="OrangeTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fontSmall</item>
    </style>

    <style name="OrangeEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="android:background">@drawable/background_edit_text_orange</item>
    </style>

    <style name="OrangeHelpTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/whiteOrange</item>
        <item name="android:textSize">@dimen/fontSmall</item>
    </style>

    <style name="MaterialEditText" parent="AppTheme">
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="met_textColor">@color/black</item>
        <item name="met_textColorHint">@color/grey</item>
        <item name="met_floatingLabel">normal</item>
        <item name="met_baseColor">@color/grey</item>
        <item name="met_primaryColor">@color/colorPrimary</item>
        <item name="met_helperTextAlwaysShown">true</item>
        <item name="met_helperTextColor">@color/grey</item>
        <item name="met_bottomTextSize">@dimen/fontSmall</item>
        <item name="met_floatingLabelTextSize">@dimen/fontSmall</item>
    </style>
</resources>
